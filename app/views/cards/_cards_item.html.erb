<div class="container">

      <table class="table table-bordered table-light">
  <thead>
    <tr>
      <th>Item</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Update</th>
      <th>Item</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	<h1>Cart</h1>
    <% @order_items.each do |item| %>
      <tr>
        <td><%= item.product.title %></td>
        <td><%= item.product.price %></td>
        
        				
		<td>
			<%= form_for item, remote: true do |f| %>
	        <%= f.hidden_field :product_id, :value => item.product.id %>
    	    <%= f.number_field :quantity, :value => item.quantity.to_i %>
    	</td>
    	<td>
    	
    		<%= f.submit "Update Cart "%>
    	</td>
    	<td>
	        <%= link_to "Remove Items", order_item_path(item), method: :delete, remote: true%>
	    	<% end %>
	    </td>
	    <td>
    		<h4>Subtotal: <%= item.total %></h4>
    		<% end %>
    	</td>
    </tr>
    </tbody>
      </table>

  
    	<h2>Your current cart has a subtotal of: <%= current_order.subtotal %></h2>
      


    
    	
    
    </div>
    
    	
 


